#include<iostream>
using namespace std;
class node{
    public:
    int data;
    node *next;
    node(int n){
        this->data=n;
        this->next=NULL;
    }
};
class stack{
    public:
    node* head;
    stack(){
        head=NULL;
    }
    void push(int x){
        node *newnode= new node(x);
        newnode->next=head;
        head=newnode;
    }
    void pop(){
        node *temp=head;
        head=head->next;
        delete temp;
    }
    int peek(){
        return head->data;
    }
    void display(){
        cout<<"the elements are:"<<endl;
        node*temp=head;
        while(temp!=NULL){
            cout<<temp->data<<" ";
            temp=temp->next;
        }
    }
    void reverse(){
        node *current= head;
        node* next=NULL;
        node* prev=NULL;
        while(current!=NULL){
            next=current->next;
            current->next=prev;
            prev=current;
            current=next;
        }
        head=prev;

    }

};
int main(){
    stack st;
    int n, value;
    cout<<"Enter the  size:"<<endl;
    cin>>n; 
    cout<<"The elemnts are:"<<endl;
    for(int i=0; i<n; i++){
        cin>>value;
        st.push(value);
    }
    st.display();
    st.reverse();
    st.display();
    cout<<"The top of the value is:"<<st.peek()<<endl;
    st.pop();
    st.pop();
    st.display();
    st.reverse();
    st.display();
    return 0;
}
